<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#419aff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_title"
            android:textColor="#ffff"
            android:gravity="center_horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:id="@+id/image_question"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:onClick="questionImageClick"
            android:background="@drawable/home_tutorial" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/next_game_time"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:textStyle="bold"

            android:layout_height="wrap_content"
            android:text="@string/the_day_and_the_money"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Channel Name"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:id="@+id/channel_name_editText"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/start_play_game"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#de3"
            android:textSize="20sp"
            android:id="@+id/btnStartPlayGame"
            android:onClick="startClick"
            android:alpha="0.4"
            android:background="@drawable/button_select"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_marginTop="25dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <io.agora.agoraandroidhq.module.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:id="@+id/user_image"

                android:src="@drawable/user_main"
                android:onClick="userImage"/>

          <!--  <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_marginTop="30dp"
                android:id="@+id/user_labl"
                android:text="Label"/>-->

            <EditText
                android:layout_marginTop="25dp"
                android:id="@+id/user_label"
                android:text="Label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@null"
                android:enabled="true"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>